{
	// CONFIG FONT
	"editor.fontFamily": "'JetBrainsMono NF','Cascadia Code NF', monospace",
	"editor.fontWeight": "400",
	"editor.formatOnType": false,

	"terminal.integrated.fontFamily": "'JetBrainsMono NF'",
	"terminal.integrated.fontSize": 12,
	"terminal.integrated.fontLigatures.enabled": false,
	"terminal.integrated.fontWeight": "500",

	// "terminal.integrated.fontWeightBold": "bold",
	"editor.codeLensFontFamily": "'JetBrainsMono NF','JetBrainsMono NF','Cascadia Code NF'",
	"workbench.startupEditor": "none",
	"material-icon-theme.files.color": "#c5c5c5",
	"material-icon-theme.folders.color": "#c5c5c5",
	"material-icon-theme.opacity": 1,
	"material-icon-theme.saturation": 1,
	"material-icon-theme.hidesExplorerArrows": false,
	// EDITOR
	"editor.minimap.enabled": false,
	"editor.cursorStyle": "line-thin",
	"editor.guides.bracketPairs": true,
	"editor.renderWhitespace": "none",
	"editor.renderControlCharacters": false,
	"explorer.decorations.badges": false,
	"editor.linkedEditing": true,
	"security.workspace.trust.untrustedFiles": "open",
	"editor.wordWrap": "on",
	"terminal.integrated.cursorStyle": "line",
	"editor.tabSize": 2,
	"editor.cursorBlinking": "solid",
	"editor.fontLigatures": true,
	"telemetry.telemetryLevel": "off",
		"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.fixAll.eslint": "explicit"
	},
	"files.associations": {
		"*.js": "javascript"
	},
	"emmet.includeLanguages": {
		"php": "html",
		"blade": "html"
	},
	"intelephense.files.exclude": [
	"**/*.blade.php",
	"**/*.js"
	],
	"explorer.confirmDelete": false,
		"window.commandCenter": false,
		"workbench.layoutControl.enabled": false,
		"terminal.integrated.defaultProfile.windows": "PowerShell",
		"workbench.tree.renderIndentGuides": "always",
		"workbench.editor.tabSizing": "shrink",
		"workbench.editor.tabSizingFixedMaxWidth": 120,
		"editor.inlineSuggest.showToolbar": "never",
		"terminal.integrated.persistentSessionReviveProcess": "never",
		"terminal.integrated.enablePersistentSessions": false,
		"workbench.cloudChanges.autoResume": "off",
		"workbench.editor.editorActionsLocation": "hidden",
		"liveServer.settings.donotShowInfoMsg": true,
		"liveServer.settings.CustomBrowser": "firefox",
		"tailwindCSS.includeLanguages": {
			"plaintext": "html"
		},
		"editor.mouseWheelZoom": true,
		"terminal.integrated.mouseWheelZoom": true,
		"window.menuBarVisibility": "hidden" ,
		"[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
	},
	"svelte.enable-ts-plugin": true,
	"debug.onTaskErrors": "showErrors",
	"workbench.layoutControl.type": "menu",
	"window.titleBarStyle": "native",
	"editor.fontSize": 14,
	"chat.commandCenter.enabled": false,
	"files.hotExit": "off",
	"workbench.editor.enablePreview": true,
	"workbench.sideBar.location": "right",
	"files.autoSave": "off",
	"window.confirmSaveUntitledWorkspace": false,
  "window.restoreWindows": "none",
	"files.restoreUntitledFiles": false,
	"workbench.openEditors": 0,
	"explorer.autoReveal": false,
	"workbench.editorAssociations": {},
	// Colores personalizados
	"workbench.colorCustomizations": {
		"sideBar.border": "#101010",
		"activityBar.border": "#101010",
		"activityBar.dropBorder": "#101010",
		"activityBarTop": "#101010",
		"activityBarTop.dropBorder": "#101010",
		"editorGroup.border": "#101010",
		"editorGroupHeader.tabsBorder": "#101010",
		"editorGroupHeader.border": "#101010",
		"editorGroup.focusedEmptyBorder": "#101010",
		"tab.border": "#101010",
		"panel.border": "#101010",
	},
	"window.newWindowProfile": "Default",
	"workbench.activityBar.location": "top",
	"database-client.autoSync": true,
	"extensionAllowedProposedApi": [

	],
	"window.customTitleBarVisibility": "never",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.colorTheme": "Default Light Modern",
}